@{
    Layout = null;
}
@model BTL_BookShop.Models.Entities.User
<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Koparion – Book Shop Bootstrap 4 Template</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/Content/img/favicon.png">

    <!-- all css here -->
    <!-- bootstrap v3.3.6 css -->
    <link rel="stylesheet" href="/Content/css/bootstrap.min.css">
    <!-- animate css --> 
    <link rel="stylesheet" href="/Content/css/animate.css">
    <!-- meanmenu css -->
    <link rel="stylesheet" href="/Content/css/meanmenu.min.css">
    <!-- owl.carousel css -->
    <link rel="stylesheet" href="/Content/css/owl.carousel.css">
    <!-- font-awesome css -->
    <link rel="stylesheet" href="/Content/css/font-awesome.min.css">
    <!-- flexslider.css-->
    <link rel="stylesheet" href="/Content/css/flexslider.css">
    <!-- chosen.min.css-->
    <link rel="stylesheet" href="/Content/css/chosen.min.css">
    <!-- style css -->
    <link rel="stylesheet" href="/Content/style.css">
    <!-- responsive css -->
    <link rel="stylesheet" href="css/responsive.css">
    <!-- modernizr css -->
    <script src="/Content/js/vendor/modernizr-2.8.3.min.js"></script>
    <style>
        body {
            background-color: #cccccc;
            background-image: url("../../Content/img/login/1.jpg");
            background-repeat: no-repeat;
            background-attachment: scroll;
            height: 100%;
            /* Center and scale the image nicely */
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }
        #content {
            background-color: transparent;
        }
        #contentLogin {
            background-color: #fff;
            opacity : 0.95;
        }
        #header1 {
            background-image: url("/Content/img/login/header.png");
            background-color: none;
        }
    </style>
</head>
<body>
    <!--[if lt IE 8]>
        <p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
    <![endif]-->
    <!-- Add your site or application content here -->
    <!-- header-area-start -->
    <header>
        <!-- header-top-area-start -->
        <!-- header-top-area-end -->
        <!-- header-mid-area-start -->
        <div class="header-mid-area ptb-40">
            <div class="container">
                <div class="row">

                    <div class="col-lg-12 col-md-6 col-sm-3 col-xs-12">
                        <div class="logo-area text-center logo-xs-mrg">
                            <a href="@Url.Action("Index","Home")" id="header1"></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <!-- header-mid-area-end -->
    </header>
    <!-- header-area-end -->
   
    <!-- user-login-area-start -->
    <div class="user-login-area mb-70" id="content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="login-title text-center mb-30">
                        <h2>Đăng nhập</h2>
                        <p>
                            Một cuốn sách thực sự hay dạy tôi nhiều điều hơn là đọc nó. Tôi phải nhanh chóng đặt nó xuống, </br> bắt đầu sống theo những điều nó chỉ dẫn. Điều tôi bắt đầu bằng cách đọc, tôi phải kết thúc bằng hành động.
                        </p>
                    </div>
                </div>
                <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12" >
                    @using (Html.BeginForm("Login", "Home"))
                    {
                    <div class="login-form" id="contentLogin">
                        <div class="single-login">
                            <label>Tài khoản hoặc email<span>*</span></label>
                            @Html.TextBoxFor(m => m.UserName)
                        </div>
                        <div class="single-login">
                            <label>Mật khẩu <span>*</span></label>
                            @Html.TextBoxFor(m => m.Password)
                        </div>
                        <div class="single-login single-login-2">
                            <input type="submit" value="Đăng nhập"  style="background-color : #F07C29;  color : #fff"/>
                            <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                            <span>Remember me</span>
                        </div>
                        @*<a href="#">Lost your password?</a>
                        <input type="submit" value="Đăng nhập" />*@
                    </div>
                    }

                </div>
            </div>
        </div>
    </div>
    <!-- user-login-area-end -->
  
    <!-- all js here -->
    <!-- jquery latest version -->
    <script src="/Content/js/vendor/jquery-1.12.0.min.js"></script>
    <!-- bootstrap js -->
    <script src="/Content/js/bootstrap.min.js"></script>
    <!-- owl.carousel js -->
    <script src="/Content/js/owl.carousel.min.js"></script>
    <!-- meanmenu js -->
    <script src="/Content/js/jquery.meanmenu.js"></script>
    <!-- wow js -->
    <script src="/Content/js/wow.min.js"></script>
    <!-- jquery.parallax-1.1.3.js -->
    <script src="/Content/js/jquery.parallax-1.1.3.js"></script>
    <!-- jquery.countdown.min.js -->
    <script src="/Content/js/jquery.countdown.min.js"></script>
    <!-- jquery.flexslider.js -->
    <script src="/Content/js/jquery.flexslider.js"></script>
    <!-- chosen.jquery.min.js -->
    <script src="/Content/js/chosen.jquery.min.js"></script>
    <!-- jquery.counterup.min.js -->
    <script src="/Content/js/jquery.counterup.min.js"></script>
    <!-- waypoints.min.js -->
    <script src="/Content/js/waypoints.min.js"></script>
    <!-- plugins js -->
    <script src="/Content/js/plugins.js"></script>
    <!-- main js -->
    <script src="/Content/js/main.js"></script>
</body>
</html>

