@{
    // Layout Search, logo, cart
}
<div class="header-mid-area ptb-40">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-5 col-xs-12">
                <div class="header-search">
                    <form method="post" action="/Shop/Search">
                        <input type="text" name="txt" placeholder="Search entire store here..." />
                        <a href="#">
                            <i class="fa fa-search"></i>
                        </a>

                    </form>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-4 col-xs-12">
                <div class="logo-area text-center logo-xs-mrg">
                    <a href="index.html"><img src="~/Content/img/logo/logo.png" alt="logo" /></a>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                <div class="my-cart">
                    <ul>
                        <li>
                            <a href="#"><i class="fa fa-shopping-cart"></i>Giỏ hàng</a>
                            <span>2</span>
                            <div class="mini-cart-sub">
                                <div class="cart-product">
                                    <div class="single-cart">
                                        <div class="cart-img">
                                            <a href="#"><img src="~/Content/img/product/1.jpg" alt="book" /></a>
                                        </div>
                                        <div class="cart-info">
                                            <h5><a href="#">Joust Duffle Bag</a></h5>
                                            <p>1 x £60.00</p>
                                        </div>
                                        <div class="cart-icon">
                                            <a href="#"><i class="fa fa-remove"></i></a>
                                        </div>
                                    </div>
                                    <div class="single-cart">
                                        <div class="cart-img">
                                            <a href="#"><img src="~/Content/img/product/3.jpg" alt="book" /></a>
                                        </div>
                                        <div class="cart-info">
                                            <h5><a href="#">Chaz Kangeroo Hoodie</a></h5>
                                            <p>1 x £52.00</p>
                                        </div>
                                        <div class="cart-icon">
                                            <a href="#"><i class="fa fa-remove"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="cart-totals">
                                    <h5>Total <span>£12.00</span></h5>
                                </div>
                                <div class="cart-bottom">
                                    <a @Html.ActionLink("ViewCart", "Index", "Cart")</a>
                                    <a href="checkout.html">Check out</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>