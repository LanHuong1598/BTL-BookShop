@using BTL_BookShop.Areas.Admin.Models;
@model PagedList.IPagedList<BookModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var i = 0;
}
@section jsFooter{
    <script src="~/Assets/Admin/controller/bookController.js"></script>
}

<div class="container-fluid">
    <div class="block-header">
        <h2>@Html.ActionLink("Trang chủ ", "Index", "HomeAdmin") -> Sách</h2>

    </div>
    <!-- Basic Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Bảng Tác giả</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="@Url.Action("Create" , "Book")">Thêm mới</a></li>

                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="text-align:center;">STT</th>
                                <th style="text-align:center;">Mã sách</th>
                                <th style="text-align:center;">Tên sách</th>
                                <th style="text-align:center;">Tác giả</th>
                                <th style="text-align:center;">loại sách</th>
                                <th style="text-align:center;">Nhà xuất bản</th>
                                <th style="text-align:center;">Nhà phát hành</th>

                                <th style="text-align:center;">Giá bán(₫)</th>
                                <th style="text-align:center;">Giá gốc(₫)</th>
                                <th style="text-align:center;">Ngày phát hành</th>
                                <th style="text-align:center;">Trạng thái</th>
                                <th style="text-align:center;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                foreach (BookModel item in Model)
                                {
                                    i++;
                                    <tr>
                                        <td style="text-align:center;">@i</td>
                                        <td style="text-align:center;">@item.Book.Code</td>
                                        <td>@item.Book.Name</td>
                                        <td style="text-align:center;">@item.NameAuthor</td>
                                        <td style="text-align:center;">@item.NameType</td>
                                        <td style="text-align:center;">@item.NamePublisher</td>
                                        <td style="text-align:center;">@item.NameReleased</td>

                                        <td>@item.Book.Price.Value.ToString("N0") </td>
                                        <td>@item.Book.PromotionPrice.Value.ToString("N0") </td>
                                        <td style="text-align:center">@item.Book.PublishDate</td>
                                        <td style="text-align:center">
                                            <a href="#" class="btn-active" data-id="@item.Book.ID">@((bool)item.Book.Status ? "Kích hoạt" : "Khóa")</a>
                                        </td>
                                        <td style="text-align:center">
                                            <ul class="header-dropdown" style="list-style-type:none;text-align : center">
                                                <li class="dropdown" style="list-style-type:none;text-align : center">
                                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                        <i class="material-icons">add</i>
                                                    </a>
                                                    <ul class="dropdown-menu pull-right">
                                                        <li><a href="/Admin/Author/Update/@item.Book.Code"><i class="material-icons">create</i>Chỉnh sửa</a></li>
                                                        <li><a href="/Admin/Author/Delete/@item.Book.Code"><i class="material-icons">clear</i>Xóa</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>

    <!-- #END# With Material Design Colors -->
</div>

