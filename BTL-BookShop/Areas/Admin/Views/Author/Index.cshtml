@using BTL_BookShop.Models.Entities;
@model PagedList.IPagedList<Author>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="block-header">
        <h2>@Html.ActionLink("Trang chủ ", "Index", "HomeAdmin") -> Tác giả</h2>

    </div>
    <!-- Basic Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Bảng Tác giả</h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="@Url.Action("Create" , "Author")">Thêm mới</a></li>

                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th style="text-align:center">STT</th>
                                <th style="text-align:center">Tên tác giả</th>
                                <th style="text-align:center">Ngày sinh</th>
                                <th style="text-align:center">Tiểu sử</th>
                                <th style="text-align:center">Quốc tịch</th>
                                <th style="text-align:center">Avatar</th>
                                <th style="text-align:center"></th>

                            </tr>
                        </thead>
                        <tbody>
                         
                            @{
                                foreach (Author item in Model)
                                {
                                    <tr>
                                        <td style="text-align:center">@item.ID</td>
                                        <td style="text-align:center">@item.Name</td>
                                        <td style="text-align:center">@(item.DateOfBirth.HasValue ? @item.DateOfBirth.Value.ToString("dd/MM/yyyy") : "")</td>
                                        <td style="text-align:center">@item.Description</td>
                                        <td style="text-align:center">@item.Type</td>
                                        <td style="text-align:center">
                                            <div style="text-align:center">
                                                <img src="@item.Image" style="width:50px;height:50px; display: block;margin: 0 auto;" />
                                            </div>
                                        </td>
                                        <td style="text-align:center">
                                            <ul class="header-dropdown" style="list-style-type:none;text-align : center">
                                                <li class="dropdown" style="list-style-type:none;text-align : center">
                                                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                                        <i class="material-icons">add</i>
                                                    </a>
                                                    <ul class="dropdown-menu pull-right">
                                                        <li><a href="/Admin/Author/Update/@item.ID"><i class="material-icons">create</i>Chỉnh sửa</a></li>
                                                        <li><a href="/Admin/Author/Delete/@item.ID"><i class="material-icons">clear</i>Xóa</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                    @Html.PagedListPager(Model,page => Url.Action("Index", new { page}))
                </div>
            </div>
        </div>
    </div>

    <!-- #END# With Material Design Colors -->
</div>


